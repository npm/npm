#!/bin/sh
(set -o igncr) 2>/dev/null && set -o igncr; # cygwin encoding fix

basedir=`dirname "$0"`

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/npm-cli.js" ]; then
  npm_cli="$basedir/npm-cli.js"
else
  npm_cli="$basedir/node_modules/npm/bin/npm-cli.js"
fi

if [ -x "$basedir/node.exe" ]; then
  "$basedir/node.exe" "$npm_cli" "$@"
else
  node "$npm_cli" "$@"
fi
